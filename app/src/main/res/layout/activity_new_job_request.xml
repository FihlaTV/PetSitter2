<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.zekisanmobile.petsitter2.view.owner.NewJobRequestActivity">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <include layout="@layout/toolbar" />

        </android.support.design.widget.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/activity_vertical_margin">

                <ImageView
                    android:id="@+id/iv_sitter"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/tv_sitter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_sitter"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="9dp"
                    android:text="Nome do Pet Sitter"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/vw_divider1"
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_above="@+id/et_date_start"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@color/divider" />

                <EditText
                    android:id="@+id/et_date_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView"
                    android:layout_alignEnd="@+id/vw_divider1"
                    android:layout_alignLeft="@+id/et_date_final"
                    android:layout_alignRight="@+id/vw_divider1"
                    android:layout_alignStart="@+id/et_date_final"
                    android:ems="10"
                    android:hint="@string/job_request_date_start"
                    android:maxLines="1"
                    android:textSize="15sp"
                    android:inputType="datetime" />

                <EditText
                    android:id="@+id/et_date_final"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/vw_divider2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignRight="@+id/vw_divider2"
                    android:layout_below="@+id/et_date_start"
                    android:layout_marginLeft="49dp"
                    android:ems="10"
                    android:hint="@string/job_request_date_final"
                    android:maxLines="1"
                    android:textSize="15sp"
                    android:inputType="datetime" />

                <View
                    android:id="@+id/vw_divider2"
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_above="@+id/et_time_start"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@color/divider" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/tv_sitter"
                    android:layout_marginTop="38dp"
                    android:src="@drawable/ic_event_note" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/et_date_final"
                    android:layout_marginTop="29dp"
                    android:src="@drawable/ic_access_time" />

                <EditText
                    android:id="@+id/et_time_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView2"
                    android:layout_alignEnd="@+id/et_date_final"
                    android:layout_alignLeft="@+id/et_date_final"
                    android:layout_alignRight="@+id/et_date_final"
                    android:layout_alignStart="@+id/et_date_final"
                    android:ems="10"
                    android:hint="@string/job_request_time_start"
                    android:maxLines="1"
                    android:textSize="15sp"
                    android:inputType="datetime" />

                <EditText
                    android:id="@+id/et_time_final"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/et_time_start"
                    android:layout_alignLeft="@+id/et_time_start"
                    android:layout_alignRight="@+id/et_time_start"
                    android:layout_alignStart="@+id/et_time_start"
                    android:layout_below="@+id/et_time_start"
                    android:ems="10"
                    android:hint="@string/job_request_time_final"
                    android:maxLines="1"
                    android:textSize="15sp"
                    android:inputType="datetime" />

                <View
                    android:id="@+id/vw_divider3"
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_alignEnd="@+id/et_time_final"
                    android:layout_alignRight="@+id/et_time_final"
                    android:layout_below="@+id/et_time_final"
                    android:layout_marginTop="11dp"
                    android:background="@color/divider" />

                <LinearLayout
                    android:id="@+id/ll_animals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/et_time_final"
                    android:layout_alignStart="@+id/et_time_final"
                    android:layout_below="@+id/vw_divider3"
                    android:layout_marginTop="11dp"
                    android:orientation="vertical">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_selected_pets"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:scrollbars="vertical" />

                    <Button
                        android:id="@+id/bt_add_animal"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="@string/actions.add_remove"
                        android:textAlignment="textEnd"
                        android:textColor="@color/colorPrimaryDark" />

                </LinearLayout>

                <View
                    android:id="@+id/vw_divider4"
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_alignEnd="@+id/ll_animals"
                    android:layout_alignRight="@+id/ll_animals"
                    android:layout_below="@+id/ll_animals"
                    android:background="@color/divider" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/ll_animals"
                    android:src="@drawable/paw_black" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/vw_divider4"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/ic_attach_money" />

                <TextView
                    android:id="@+id/tv_total_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/ll_animals"
                    android:layout_alignStart="@+id/ll_animals"
                    android:layout_alignTop="@+id/imageView4"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold" />

            </RelativeLayout>
        </ScrollView>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="true"
            android:background="@color/white"
            app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/activity_horizontal_margin">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Escolha os pets"
                    android:padding="16dp"
                    android:textSize="16sp"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_pets_to_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:scrollbars="vertical" />

                <Button
                    android:id="@+id/btn_finish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="@color/colorAccent"
                    android:text="Concluir"
                    android:textColor="@color/white" />

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>

</android.support.v4.widget.DrawerLayout>
